{
  "name": "@simonknittel/components",
  "version": "0.7.0",
  "description": "Component library for my personal website based on Web Components via Stencil",

  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/components/components.esm.js",
  "files": [
    "dist/"
  ],

  "scripts": {
    "build": "stencil build --docs",
    "start:prod": "stencil build --docs --watch",
    "start": "stencil build --dev --docs --watch",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "devDependencies": {
    "@babel/core": "7.13.1",
    "@stencil/core": "2.4.0",
    "@stencil/sass": "1.4.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonknittel/components.git"
  }
}
